#ifndef INC_STM32F407XX_H_
#define INC_STM32F407XX_H_

/* Flash and SRAM memories */
#define FLASH_BASEADDR			(*(volatile unsigned long*) 0x08000000)
#define ROM_BASEADDR			(*(volatile unsigned long*) 0x1FFF0000)
#define SRAM1_BASEADDR			(*(volatile unsigned long*) 0x20000000)
#define SRAM2_BASEADDR			(*(volatile unsigned long*) 0x2001C000)
#define SRAM					SRAM1_BASEADDR //SRAM1 is commonly used

/* Bus clock AHBx and APBx peripheral base addresses */
#define PERIPH_BASEADDR			(*(volatile unsigned long*) 0x40000000)
#define APB1_BASEADDR			PERIPH_BASEADDR
#define APB2_BASEADDR			(*(volatile unsigned long*) 0x40010000)
#define AHB1_BASEADDR			(*(volatile unsigned long*) 0x40020000)
#define AHB2_BASEADDR			(*(volatile unsigned long*) 0x50000000)

/* Base addresses of all peripherals that are hanging on AHB1 bus */
#define GPIOA_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x0000)
#define GPIOB_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x0400)
#define GPIOC_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x0800)
#define GPIOD_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x0C00)
#define GPIOE_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x0100)
#define GPIOF_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x1400)
#define GPIOG_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x1800)
#define GPIOH_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x1C00)
#define GPIOI_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x2000)
#define GPIOJ_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x2400)
#define GPIOK_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x2800)
#define RCC_BASEADDR			(*(volatile unsigned long*) AHB1_BASEADDR + 0x3800)

/* Base addresses of peripherals that are hanging to APB1 bus */
#define I2C1_BASEADDR			(*(volatile unsigned long*) APB1_BASEADDR + 0x5400)
#define I2C2_BASEADDR			(*(volatile unsigned long*) APB1_BASEADDR + 0x5800)
#define I2C3_BASEADDR			(*(volatile unsigned long*) APB1_BASEADDR + 0x5C00)


#endif /* INC_STM32F407XX_H_ */
