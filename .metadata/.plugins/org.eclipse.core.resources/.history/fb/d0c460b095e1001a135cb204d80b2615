#ifndef INC_STM32F407XX_H_
#define INC_STM32F407XX_H_

/* Flash and SRAM memories */
#define FLASH_BASE_ADDR			(*(volatile unsigned long*) 0x08000000)
#define ROM						(*(volatile unsigned long*) 0x1FFF0000)
#define SRAM1_BASE_ADDR			(*(volatile unsigned long*) 0x20000000)
#define SRAM2_BASE_ADDR			(*(volatile unsigned long*) 0x2001C000)
#define SRAM					SRAM1_BASE_ADDR //SRAM1 is commonly used



#endif /* INC_STM32F407XX_H_ */
